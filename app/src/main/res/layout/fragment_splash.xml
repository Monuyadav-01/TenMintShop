<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".fragment.signin.SplashFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGroceryApp"
                android:layout_width="wrap_content"
                android:layout_height="91.00dp"
                android:text="fastshop"
                android:textColor="#000000"
                android:textSize="78.00sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="91.00dp"
                android:text="it"
                android:textColor="#0FDC07"
                android:textSize="78.00sp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="India\'s 10 fastest grocery app"
            android:textColor="#000000"
            android:textSize="19.50sp"
            />
        <View
            android:layout_width="264.00dp"
            android:layout_height="2.60dp"
            android:background="#7B7777"
            android:layout_marginTop="26.00dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Created by MonuYadav"
            android:textColor="#000000"
            android:textSize="19.50sp"
            />
        <TextView
            android:id="@+id/textAnimation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="19.50sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/startBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            app:cornerRadius="7dp"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:backgroundTint="#217576"
            android:textColor="@color/white"
            android:textSize="20sp"

            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>